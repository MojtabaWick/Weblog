@page
@model Weblog.Presentation.RazorPages.Pages.Account.LoginModel
@{
    ViewData["Title"] = "ورود به حساب کاربری";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 1rem;">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">ورود به حساب کاربری</h2>
            <p class="text-muted">نام کاربری و رمز عبور خود را وارد کنید</p>
        </div>

        <form method="post">
            <div class="mb-3 text-end">
                <label asp-for="Author.Username" class="form-label">نام کاربری</label>
                <input asp-for="Author.Username"
                       class="form-control text-end"
                       placeholder="مثال: username"
                       required />
                <span asp-validation-for="Author.Username" class="text-danger"></span>
            </div>

            <div class="mb-3 text-end">
                <label asp-for="Author.Password" class="form-label">رمز عبور</label>
                <input asp-for="Author.Password"
                       type="password"
                       class="form-control text-end"
                       placeholder="••••••••"
                       required />
                <span asp-validation-for="Author.Password" class="text-danger"></span>
            </div>

            @if (!string.IsNullOrEmpty(Model.ResultMessage))
            {
                <div class="alert alert-danger text-center mb-3">
                    @Model.ResultMessage
                </div>
            }

            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold mb-2">
                ورود
            </button>

            <a asp-page="/Account/Register" class="btn btn-outline-secondary w-100 py-2 fw-bold">
                ثبت نام
            </a>
        </form>

        <div class="text-center mt-3">
            <a href="#" class="text-decoration-none">رمز عبور خود را فراموش کرده‌اید؟</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
