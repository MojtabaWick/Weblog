@page
@model Weblog.Presentation.RazorPages.Pages.Admin.Posts.IndexModel
@{
    ViewData["Title"] = "پست‌های نویسنده";
}

<h2 class="mb-3">پست‌های نویسنده</h2>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>عنوان</th>
        <th>دسته</th>
        <th>تاریخ انتشار</th>
        <th>نظرها</th>
        <th>عملیات</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var post in Model.Posts)
    {
        <tr>
            <td>@post.Title</td>
            <td>@post.CategoryName</td>
            <td>@post.PublishedAt.ToString("yyyy/MM/dd")</td>
            <td>@post.Comments.Count</td>
            <td>
                <a asp-page="Edit" asp-route-id="@post.Id" class="btn btn-sm btn-warning">
                    ویرایش
                </a>
                <form method="post" asp-page-handler="Delete" asp-route-id="@post.Id" class="d-inline">
                    <button class="btn btn-sm btn-danger" type="submit">حذف</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>