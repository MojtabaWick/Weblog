@page "{id:int}"
@model Weblog.Presentation.RazorPages.Pages.Admin.Posts.EditModel
@{
    ViewData["Title"] = "ویرایش پست";
}

<h2 class="mb-4">ویرایش پست</h2>

<form method="post">

    <div class="mb-3">
        <label class="form-label">عنوان</label>
        <input asp-for="Input.Title" class="form-control" />
        <span class="text-danger" asp-validation-for="Input.Title"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">محتوا</label>
        <textarea asp-for="Input.Content" rows="6" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="Input.Content"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">آدرس تصویر</label>
        <input asp-for="Input.ImageUrl" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">دسته‌بندی</label>
        <select asp-for="Input.CategoryId" class="form-control"
                asp-items="Model.Categories"></select>
    </div>

    <button class="btn btn-success" type="submit">ذخیره</button>
    <a asp-page="Index" class="btn btn-secondary">بازگشت</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}