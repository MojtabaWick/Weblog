@page
@model Weblog.Presentation.RazorPages.Pages.Admin.Comments.IndexModel

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">لیست کامنت‌ها</h5>
    </div>

    <div class="card-body p-0">
        <table class="table table-hover table-striped mb-0">
            <thead class="table-dark">
                <tr>
                    <th>نام</th>
                    <th>ایمیل</th>
                    <th>پست</th>
                    <th>متن</th>
                    <th>وضعیت</th>
                    <th class="text-center">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.Comments)
                {
                    <tr>
                        <td>@c.FirstName @c.LastName</td>
                        <td>@c.Email</td>
                        <td>@c.PostTitle</td>
                        <td>@c.Text</td>
                        <td>
                            @if (c.IsApproved)
                            {
                                <span class="badge bg-success">تأیید شده</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">تأیید نشده</span>
                            }
                        </td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">

                                <a asp-page-handler="Approve"
                                   asp-route-id="@c.Id"
                                   class="btn btn-success btn-sm">
                                    تأیید
                                </a>

                                <a asp-page-handler="Reject"
                                   asp-route-id="@c.Id"
                                   class="btn btn-danger btn-sm">
                                    رد
                                </a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
