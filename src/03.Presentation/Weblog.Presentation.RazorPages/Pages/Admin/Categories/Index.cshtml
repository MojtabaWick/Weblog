@page
@model Weblog.Presentation.RazorPages.Pages.Admin.Categories.IndexModel
@{
    ViewData["Title"] = "مدیریت دسته‌ها";
}

<h2 class="mb-3">لیست دسته‌ها</h2>

<a class="btn btn-primary mb-3" asp-page="Create">ایجاد دسته جدید</a>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>نام</th>
        <th>عملیات</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Categories)
    {
        <tr>
            <td>@item.Name</td>
            <td>
                <a class="btn btn-sm btn-warning" asp-page="Edit" asp-route-id="@item.Id">ویرایش</a>

                <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="d-inline">
                    <button class="btn btn-sm btn-danger" type="submit">حذف</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>